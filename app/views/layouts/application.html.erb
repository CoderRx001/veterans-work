<!DOCTYPE html>
<html>
  <head>
    <title>VeteransWork</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= link_to 'Logout', destroy_company_session_path, method: :delete if current_company %>
      <%= link_to 'Logout', destroy_customer_session_path, method: :delete if current_customer %>
      <%= yield %>
    </div>
  </body>
</html>
