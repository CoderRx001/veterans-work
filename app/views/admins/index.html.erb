<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Recent Customers</h3></div>
    <div class="panel-body">
      <% @recent_customers.each do |customer| %>
        <p><%= customer.email %></p>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Recent Companies</h3></div>
    <div class="panel-body">
      <% @recent_companies.each do |company| %>
        <p><%= company.name %> - <%= link_to company.status, "/companies/#{company.id}/edit" %></p>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Recent Customer Requests</h3></div>
    <div class="panel-body">
      <% @recent_customer_requests.each do |customer_request| %>
        <p><%= customer_request.description %></p>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Recent Quotes</h3></div>
    <div class="panel-body">
      <% @recent_quotes.each do |quote| %>
        <p><%= quote.total_cost_estimate %></p>
      <% end %>
    </div>
  </div>
</div>

