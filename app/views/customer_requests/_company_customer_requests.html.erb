<h1>Customer Requests</h1>
<div id="credit-summary" class="clearfix">
  <ol>
    <li><button type="button" class="brn-primary wow" data-container="body" data-toggle="popover" data-placement="top">
    Buy More Credits</button></li>
    <li><p>Credits: <%= @company.credits %></li></p>
  </ol>
</div>
 <div class="panel panel-default">
   <div class="panel-body">
     <table class="table table-hover">
       <thead>
         <tr>
           <th></th>
           <th>Distance</th>
           <th>Address</th>
           <th>Category</th>
           <th>Expires</th>
         </tr>
       </thead>
       <tbody>
           <% @requests.each do |request| %>
            <% if request.expires_date > Date.today %>
             <tr>
               <td>
                 <%= link_to "/customer_requests/#{request.id}" do %>
                   <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                 <% end %>
               </td>
               <td>
                 <%= request.distance_from([@company.latitude, @company.longitude]).round(1) %> mi.
               </td>
               <td><%= request.full_street_address.titleize %></td>
               <td><%= request.service_category.name.capitalize %></td>
               <td><%= request.expires_date.strftime("%m/%d/%Y") %></td>
             </tr>
            <% end %>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <script type="text/javascript">
    $(function () {
      $('button.wow').popover({
        html: true,
        container: 'body',
        title: 'Quantity:',
        content: '<div><input type="number" onclick="changeTotal()" onkeyup="changeTotal()" id="credits" name="quantity" min="1"> </div> <p>Total: <span id="credit-total"></span> <br><br><button class="btn btn-primary">Checkout</button>'
      })
    })
      function changeTotal() {
        console.log('hello world');
        var quantity = document.getElementById('credits').value;
        if(quantity > 0) {
          document.getElementById('credit-total').innerHTML = '$' + quantity;
        }
      }



  </script>
